<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/css/slides.css">
    <title>
        <%= item.product_name %> | Funkoshop
    </title>
</head>

<body>
    <%- include('partials/header') -%>
        <div class="items_container">
            <section>
                <div class="product_container">
                    <div class="product_image">
                        <picture><img src="<%= item.image_front %>" alt="<%= item.product_description %>"></picture>
                    </div>
                    <div class="product_detail <%= item.licence_id %>">
                        <% licences.forEach(licence=>{
                            if (licence.licence_id == item.licence_id) {%>
                            <h3>
                                <%= licence.licence_name.toUpperCase() %>
                            </h3>
                            <% }}); %>
                                <h2>
                                    <%= item.product_name.toUpperCase() %>
                                </h2>
                                <p>
                                    <%= item.product_description %>.
                                </p>
                                <h2>$ <%= item.price %></h2>
                                <form class="product_cant" method="post" action="/shop/item/<%= item.product_id %>/add">
                                    <input type="hidden" name="product_id" value="<%= item.product_id %>">
                                    <input type="text" name="quantity" value="1" class="cant-input" id="quantity" readonly>
                                    <div class="cant_buttons">
                                        <button class="cant-btn" id="add" type="button">+</button>
                                        <button class="cant-btn" id="subtract" type="button">-</button>
                                    </div>
                                    <button class="form-btn" type="submit">Agregar al Carrito</button>
                                </form>
                                <div class="pagos">
                                    <a href="#" class="metodos-pago">Ver métodos de pago</a>
                                    <p> - 3 CUOTAS SIN INTERÉS</p>
                                </div>
                    </div>
                </div>
            </section>
            <section class="relac_prod glide">;
                <h2>PRODUCTOS RELACIONADOS</h2>
                <div class="glide__track" data-glide-el="track">
                    <div class="relac_prod_container glide__slides">
                        <% products.forEach(product=>{
                            if ((product.product_id != item.product_id) && (licences[product.licence_id-1].licence_name
                            == licences[item.licence_id-1].licence_name)) { %>
                            <article class="item_card glide__slide">
                                <div class="new_prod">
                                    <h5>NUEVO</h5>
                                </div>
                                <a href="<%= product.product_id %>">
                                    <picture class="card_img">
                                        <img src="<%= product.image_front %>" alt="<%= product.product_description %>">
                                    </picture>
                                    <div>
                                        <p class="card_category">
                                            <%= licences[product.licence_id-1].licence_name.toUpperCase() %>
                                        </p>
                                        <h3 class="card_title">
                                            <%= product.product_name.toUpperCase() %>
                                        </h3>
                                        <p class="card_price">$ <%= product.price %>
                                        </p>
                                        <p class="card_pago">3 CUOTAS SIN INTERÉS</p>
                                    </div>
                                </a>
                            </article>
                            <% } }) %>
                    </div>
                </div>
                <div class="glide__arrows" data-glide-el="controls">
                    <button class="glide__arrow glide__arrow--left" data-glide-dir="<"><iconify-icon
                            icon="material-symbols:chevron-left"></iconify-icon></button>
                    <button class="glide__arrow glide__arrow--right" data-glide-dir=">"><iconify-icon
                            icon="material-symbols:chevron-right"></iconify-icon></button>
                </div>
            </section>
        </div>
        <%- include('partials/footer') -%>
        <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
        <script src="/js/glide.js"></script>
        <script src="/js/item.js"></script>
</body>

</html>